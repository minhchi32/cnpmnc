@model cnpmnc.backend.DTOs.AuthorizeDTOs.UserLoginDTO;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Index", "Authorize"))
{
    @Html.AntiForgeryToken()
<div class="limiter">
            <div class="container-login100" style="background-color:powderblue;">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-165 p-b-54">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-49">
                            Đăng Nhập
                        </span>


                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is required">
                            <span class="label-input100">Tài khoản</span>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control input100", style = "field-validation-error", @placeholder = "Nhập tài khoản" })
                            @Html.ValidationMessageFor(model => model.Username)
@*                            <input class="input100" type="text" name="username" placeholder="Nhập tài khoản">*@
                            <span class="focus-input100" data-symbol="&#xf206;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">Mật khẩu</span>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input100", style = "field-validation-error", @placeholder = "Nhập tài khoản" })
                            @Html.ValidationMessageFor(model => model.Password)
@*                            <input class="input100" type="password" name="pass" placeholder="Nhập mật khẩu">*@
                            <span class="focus-input100" data-symbol="&#xf190;"></span>
                        </div>

                        @if (ViewBag.Error == null)
                        {
                            <p>@ViewBag.Error</p>
                        }

                        <div class="text-right p-t-8 p-b-31">
                        </div>
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn" type="submit">
                                    Đăng Nhập
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
</div>
}