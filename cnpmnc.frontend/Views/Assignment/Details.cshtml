@using cnpmnc.shared.Enums
@model cnpmnc.backend.DTOs.AssignmentDTOs.AssignmentDTO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chi tiết phân công</h6>
        </div>
        <div class="card-body">
            <h4>Thông tin phân công</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Teacher.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AssignDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AssignDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Note)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Note)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State)
                </dd>
            </dl>
            <div>
                @if (Model.State == AssignmentStateEnumDto.WaitingForAcceptance)
                {

                    <text>Html.ActionLink("Sửa", "CreateOrUpdate", new { id = Model.Id }, new{ class="btn btn-warning" })
                        |</text>

                }
                <a class="btn btn-danger" asp-action="Index">Về danh sách</a>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

@section Scripts {
<!-- Bootstrap core JavaScript-->
<script src="~/lib/Content/loginassets/vendor/jquery/jquery.min.js"></script>
<script src="~/lib/Content/loginassets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/lib/Content/loginassets/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/lib/Content/loginassets/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="~/lib/Content/loginassets/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/lib/Content/loginassets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/lib/Content/loginassets/js/demo/datatables-demo.js"></script>
}