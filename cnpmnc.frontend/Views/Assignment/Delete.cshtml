@model cnpmnc.backend.DTOs.AssignmentDTOs.AssignmentDTO

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Xóa phân công</h6>
            </div>
            <div class="card-body">

                <h3>Bạn có chắc chắn muốn xóa không?</h3>
                <div>
                    <h4>Thông tin phân công</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Course.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Course.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Teacher.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Teacher.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AssignDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AssignDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Note)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Note)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.State)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.State)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="submit" value="Xóa" class="btn btn-danger" /> |
                        <a asp-action="Index">Về danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

@section Scripts {
<!-- Bootstrap core JavaScript-->
<script src="~/lib/Content/loginassets/vendor/jquery/jquery.min.js"></script>
