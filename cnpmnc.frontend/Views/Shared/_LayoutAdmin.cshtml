@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cnpmnc.frontend</title>
    <!-- Custom fonts for this template -->
    <link href="~/lib/Content/loginassets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/lib/Content/loginassets/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom styles for this page -->
    <link href="~/lib/Content/loginassets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/Content/loginassets/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/Content/loginassets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/Content/loginassets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/lib/Content/loginassets/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/lib/Content/loginassets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/Content/loginassets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/lib/Content/loginassets/js/demo/datatables-demo.js"></script>
    <script src="~/js/Scripts/script.js"></script>
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-danger sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <li>
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Trung tâm tin học <sup>Admin</sup></div>
                </a>
            </li>
            @{
                if (HttpContextAccessor.HttpContext.Session.GetString("User") == "Admin")
                {
                    <asp:Literal Mode="PassThrough" Text="<hr />" class="sidebar-divider my-0" runat="server" />
                    <!-- Heading -->
                    <li class="sidebar-heading">
                        Khóa Học và giảng viên
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                        aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fas fa-fw fa-tasks"></i>
                            <span>Quản Lý Khóa học giảng viên</span>
                        </a>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Khóa học</h6>
                                <a class="collapse-item" asp-area="" asp-controller="Course" asp-action="Index">Danh sách khóa
                                    học</a>
                                <a class="collapse-item" asp-action="CreateOrUpdate" asp-controller="Course">Thêm mới khóa
                                    học</a>
                                <h6 class="collapse-header">Giảng viên:</h6>
                                <a class="collapse-item" asp-area="" asp-controller="Teacher" asp-action="Index">Danh sách giảng
                                    viên</a>
                                <a class="collapse-item" asp-action="CreateOrUpdate" asp-controller="Teacher">Thêm mới giảng
                                    viên</a>
                            </div>
                        </div>
                    </li>
                    <asp:Literal Mode="PassThrough" Text="<hr /> " class="sidebar-divider" runat="server" />

                    <!-- Heading -->
                    <li class="sidebar-heading">
                        Phân công môn học
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                        aria-expanded="true" aria-controls="collapseUtilities">
                            <i class="fas fa-fw fa-user"></i>
                            <span>Phân công môn học</span>
                        </a>
                        <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                        data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Phân công:</h6>
                                <a class="collapse-item" asp-area="" asp-controller="AssignmentGrade" asp-action="Index">Danh sách
                                    phân công</a>
                                <a class="collapse-item" asp-action="CreateOrUpdate" asp-controller="AssignmentGrade">Thêm mới</a>
                            </div>
                        </div>
                    </li>
                }
                if (HttpContextAccessor.HttpContext.Session.GetString("User") == "Teacher")
                {
                    <asp:Literal Mode="PassThrough" Text="<hr />" class="sidebar-divider my-0" runat="server" />
                    <!-- Heading -->
                    <li class="sidebar-heading">
                        Giảng viên
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                        aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fas fa-fw fa-tasks"></i>
                            <span>Giảng viên</span>
                        </a>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Thông tin cá nhân:</h6>
                                <a class="collapse-item" asp-action="UpdateInfo" asp-controller="Account">Thông tin cá nhân</a>
                                        <a class="collapse-item" asp-action="ListAssignmentGrade" asp-controller="Account">Danh sách phân
                                    công</a>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <form class="form-inline">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    </form>

                    <!-- Topbar Search -->
                    <!--<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for~/lib."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>-->
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span
                                    class="mr-2 d-none d-lg-inline text-gray-600 small">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</span>
                                <img class="img-profile rounded-circle"
                                    src="~/lib/Content/loginassets/img/undraw_profile.svg">
                            </a>
                        </li>
                    </ul>
                    <a href="@Url.Action("Logout", "Authorize")">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        Đăng xuất
                    </a>
                </nav>

                <!-- End of Topbar -->
            </div>
            <!-- End of Main Content -->

            @RenderBody()




            <!-- Footer -->

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Nhóm 10 Website 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>




</body>
@RenderSection("Scripts", required: false)

</html>
